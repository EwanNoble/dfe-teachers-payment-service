<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render("shared/error_summary", instance: current_claim, errored_field_id_overrides: { student_loan: "tslr_claim_student_loan_true" }) if current_claim.errors.any? %>

    <%= form_for current_claim, url: claim_path do |form| %>
      <%= form.hidden_field :student_loan %>
        <%= form_group_tag current_claim do %>
          <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
              <h1 class="govuk-fieldset__heading">
                <%= t("tslr.questions.student_loan_repayment_plan.student_loan.question") %>
              </h1>
            </legend>
            <span class="govuk-hint"><%= t("tslr.questions.student_loan_repayment_plan.student_loan.hint") %></span>

            <%= errors_tag current_claim, :student_loan %>

            <div class="govuk-radios govuk-radios--inline">
              <div class="govuk-radios__item">
                <%= form.radio_button(:student_loan, true, class: "govuk-radios__input")%>
                <%= form.label :student_loan_true, "Yes", class: "govuk-label govuk-radios__label" %>
              </div>
              <div class="govuk-radios__item">
                <%= form.radio_button(:student_loan, false, class: "govuk-radios__input")%>
                <%= form.label :student_loan_false, "No", class: "govuk-label govuk-radios__label" %>
              </div>
            </div>

          </fieldset>
        <% end %>
        <%= form.submit "Continue", class: "govuk-button" %>
      <% end %>
  </div>
</div>
