{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appInsightsName" : {
      "type": "string"
    },
    "alertNamePrefix": {
      "type": "string"
    },
    "actionGroupId": {
      "type": "string"
    },
    "appServiceId": {
      "type": "string"
    },
    "appServicePlanId": {
      "type": "string"
    },
    "appServiceWebTestTimeoutSecs": {
      "type": "int",
      "defaultValue": 30
    },
    "appServiceWebTestExpected": {
      "type": "int",
      "defaultValue": 200
    },
    "appServiceWebTestUrl": {
      "type": "string",
      "defaultValue": "http://development.additional-teaching-payment.education.gov.uk/healthcheck"
    },
    "appServiceWebTestLocations": {
      "type": "array",
      "defaultValue": [
        { "Id": "us-il-ch1-azr"},
        { "Id": "us-ca-sjc-azr"},
        { "Id": "emea-fr-pra-edge"},
        { "Id": "emea-nl-ams-azr"},
        { "Id": "emea-gb-db3-azr"}
      ]
    }
  },
  "variables": {
    "appServiceName": "[last(split(parameters('appServiceId'), '/'))]",
    "appServiceAlertPrefix": "[concat(parameters('alertNamePrefix'), '-', variables('appServiceName'))]",
    "appServiceHighResponseTimeAlertName": "[concat(variables('appServiceAlertPrefix'), '-high-response-time')]",
    "appServiceHttpServerErrorAlertName": "[concat(variables('appServiceAlertPrefix'), '-http-server-error')]",
    "appServiceWebTestName": "[concat(variables('appServiceAlertPrefix'), '-web-test')]",

    "appServicePlanName": "[last(split(parameters('appServicePlanId'), '/'))]",
    "appServicePlanAlertPrefix": "[concat(parameters('alertNamePrefix'), '-', variables('appServicePlanName'))]",
    "appServicePlanHighCpuAlertName": "[concat(variables('appServicePlanAlertPrefix'), '-high-cpu')]",
    "appServicePlanHighMemoryAlertName": "[concat(variables('appServicePlanAlertPrefix'), '-high-memory')]"
  },
  "resources": [
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[variables('appServiceHighResponseTimeAlertName')]",
      "location": "global",
      "properties": {
        "scopes": ["[parameters('appServiceId')]"],
        "enabled": true,
        "description": "[concat('Alert when average response times for ', variables('appServiceName'), ' are greater than 2 seconds.')]",
        "severity": 1,
        "evaluationFrequency": "PT1M",
        "windowSize": "PT5M",
        "targetResourceType": "Microsoft.Web/sites",
        "targetResourceRegion": "[resourceGroup().location]",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "criterionType": "StaticThresholdCriterion",
              "name": "high-response-time",
              "metricNamespace": "Microsoft.Web/sites",
              "metricName": "AverageResponseTime",
              "operator": "GreaterThan",
              "threshold": 2,
              "timeAggregation": "Average"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[parameters('actionGroupId')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[variables('appServiceHttpServerErrorAlertName')]",
      "location": "global",
      "properties": {
        "scopes": ["[parameters('appServiceId')]"],
        "enabled": true,
        "description": "[concat('Alert when any HTTP server errors occur for ', variables('appServiceName'), '.')]",
        "severity": 1,
        "evaluationFrequency": "PT1M",
        "windowSize": "PT1M",
        "targetResourceType": "Microsoft.Web/sites",
        "targetResourceRegion": "[resourceGroup().location]",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "criterionType": "StaticThresholdCriterion",
              "name": "http-server-error",
              "metricNamespace": "Microsoft.Web/sites",
              "metricName": "Http5xx",
              "operator": "GreaterThan",
              "threshold": 1,
              "timeAggregation": "Total"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[parameters('actionGroupId')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[variables('appServicePlanHighCpuAlertName')]",
      "location": "global",
      "properties": {
        "scopes": ["[parameters('appServicePlanId')]"],
        "enabled": true,
        "description": "[concat('Alert when average CPU utilization for ', variables('appServicePlanName'), ' is greater than 80%.')]",
        "severity": 1,
        "evaluationFrequency": "PT1M",
        "windowSize": "PT5M",
        "targetResourceType": "Microsoft.Web/serverfarms",
        "targetResourceRegion": "[resourceGroup().location]",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "criterionType": "StaticThresholdCriterion",
              "name": "high-cpu",
              "metricNamespace": "Microsoft.Web/serverfarms",
              "metricName": "CpuPercentage",
              "operator": "GreaterThan",
              "threshold": 80,
              "timeAggregation": "Average"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[parameters('actionGroupId')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Insights/metricAlerts",
      "apiVersion": "2018-03-01",
      "name": "[variables('appServicePlanHighMemoryAlertName')]",
      "location": "global",
      "properties": {
        "scopes": ["[parameters('appServicePlanId')]"],
        "enabled": true,
        "description": "[concat('Alert when average memory utilization for ', variables('appServicePlanName'), ' is greater than 80%.')]",
        "severity": 1,
        "evaluationFrequency": "PT1M",
        "windowSize": "PT5M",
        "targetResourceType": "Microsoft.Web/serverfarms",
        "targetResourceRegion": "[resourceGroup().location]",
        "criteria": {
          "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria",
          "allOf": [
            {
              "criterionType": "StaticThresholdCriterion",
              "name": "high-memory",
              "metricNamespace": "Microsoft.Web/serverfarms",
              "metricName": "MemoryPercentage",
              "operator": "GreaterThan",
              "threshold": 80,
              "timeAggregation": "Average"
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[parameters('actionGroupId')]"
          }
        ]
      }
    },
    {
      "name": "[variables('appServiceWebTestName')]",
      "type": "Microsoft.Insights/webtests",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "kind": "ping",
      "tags": {
                "[concat('hidden-link:', resourceId('microsoft.insights/components/', parameters('appInsightsName')))]": "Resource"
      },
      "properties": {
        "Name": "[variables('appServiceWebTestName')]",
        "Enabled": true,
        "SyntheticMonitorId": "[variables('appServiceWebTestName')]",
        "Frequency": 60,
        "Timeout": "[parameters('appServiceWebTestTimeoutSecs')]",
        "Kind": "ping",
        "Locations": "[parameters('appServiceWebTestLocations')]",
        "Configuration": {
          "WebTest": "[concat('<WebTest Name=\"', variables('appServiceWebTestName'), '\"',  ' Enabled=\"True\" CssProjectStructure=\"\" CssIteration=\"\" Timeout=\"',parameters('appServiceWebTestTimeoutSecs'),'\" WorkItemIds=\"\" xmlns=\"http://microsoft.com/schemas/VisualStudio/TeamTest/2010\" Description=\"\" CredentialUserName=\"\" CredentialPassword=\"\" PreAuthenticate=\"True\" Proxy=\"default\" StopOnError=\"False\" RecordedResultFile=\"\" ResultsLocale=\"\">        <Items>        <Request Method=\"GET\"  Version=\"1.1\" Url=\"', parameters('appServiceWebTestUrl') ,'\" ThinkTime=\"0\" Timeout=\"',parameters('appServiceWebTestTimeoutSecs'),'\" ParseDependentRequests=\"True\" FollowRedirects=\"True\" RecordResult=\"True\" Cache=\"False\" ResponseTimeGoal=\"0\" Encoding=\"utf-8\" ExpectedHttpStatusCode=\"', parameters('appServiceWebTestExpected') ,'\" ExpectedResponseUrl=\"\" ReportingName=\"\" IgnoreHttpStatusCode=\"False\" /></Items></WebTest>')]"
        }
      }
    }
  ],
  "outputs": {}
}
